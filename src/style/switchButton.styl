div.tv-switch-btn
div.tv-switch-btn *
    -webkit-tap-highlight-color transparent
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

div.tv-switch-btn
    label 
        cursor pointer
        font-size .8rem
        color #9e9e9e

        input[type="checkbox"]
            opacity 0
            width 0
            height 0
            box-sizing border-box
            padding 0
            margin 0
            line-height normal
            -webkit-appearance checkbox

        .tv-lever
            content ""
            display inline-block
            position relative
            width 36px
            height 14px
            background-color rgba(0, 0, 0, .38)
            border-radius 15px
            margin-right 10px
            -webkit-transition background .3s ease
            vertical-align middle
            margin 0 16px

        

        input[type="checkbox"]:checked + .tv-lever
            background-color #84c7c1

            &:before
            &:after
                left 18px

        input[type="checkbox"]:not(:checked)
        input[type="checkbox"]:checked
            position absolute
            opacity 0
            pointer-events none
    
    