.tv-button
    border-style none
    font-size 1em
    padding 10px
    cursor pointer
    background-color #212121
    color white
    border-radius 3px
    box-shadow 0 3px 3px rgba(0, 0, 0, .14), 0 1px 7px 0 rgba(0, 0, 0, .12), 0 3px 1px -1px rgba(0, 0, 0, .2)
    -webkit-box-shadow 0 3px 3px rgba(0, 0, 0, .14), 0 1px 7px 0 rgba(0, 0, 0, .12), 0 3px 1px -1px rgba(0, 0, 0, .2)
    transition box-shadow .3s

    &:focus
        outline 1px black

    &:active
        border-style none
        box-shadow none

        
    

    