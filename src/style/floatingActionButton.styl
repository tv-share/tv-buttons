.tv-floating-action-button
    position absolute
    width 60px
    height 60px
    background-color #212121
    border-radius 50%
    display inline-block
    cursor pointer
    font-size 1em
    border-radius 50%
    transition: all .2s ease-in-out
    right 15px
    bottom 15px

    > img
        height 50%
        width 50%
        padding-left 25%
        padding-top 25%

    &.-fixed
        position fixed

    &:hover
        background-color #424242

    &:active
        transform: scale(0.9)


